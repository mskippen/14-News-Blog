<div class="row">
  <div class="col-md-6">
    <h2>Login</h2>
    <form class="form login-form">
        <div class="mb-3">
            <label for="email" class="title">Email</label>
            <input type="email" class="form-control" id="email-login"  name="email" aria-describedby="email">
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
             <input class="form-input form-control" type="password" id="password-login" /> 
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>
  </div>

  <div class="col-md-6">
    <h2>Signup</h2>

    <form class="form signup-form">
       <div class="mb-3">
            <label for="name" class="name">Name</label>
            <input type="text" class="form-control" id="name-signup"  name="name" aria-describedby="email">
        </div>
       <div class="mb-3">
            <label for="email" class="title">Email</label>
            <input type="email" class="form-control" id="email-signup"  name="email" aria-describedby="email">
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
             <input class="form-input form-control" type="password" id="password-signup" /> 
        </div>
        <button type="submit" class="btn btn-primary">Signup</button>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
